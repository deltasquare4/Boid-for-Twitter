<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:padding="10dp">
	<RelativeLayout android:id="@+id/exampleFrame"
		android:padding="5dp" android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/fontSizeDialogExample"
			android:layout_centerInParent="true" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true" android:layout_marginTop="10dp"
			android:text="@string/boid_is_awesome" android:textAppearance="?android:attr/textAppearanceMedium" />
	</RelativeLayout>
	<SeekBar android:id="@+id/fontSizeDialogSlider" android:max="32"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_below="@+id/exampleFrame" android:layout_marginTop="7dp" />
</RelativeLayout>