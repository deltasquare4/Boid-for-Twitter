<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
	android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<com.teamboid.twitter.views.SideNavigationLayout
		android:layout_width="match_parent" android:id="@+id/slide"
		android:layout_height="match_parent">
		<ListView android:alpha="0" android:background="?sideNavColor"
			android:cacheColorHint="?sideNavColor" android:id="@android:id/list"
			android:layout_width="250dp" android:layout_height="match_parent" />
		<include layout="@layout/tweet_view_content" />
		<com.teamboid.twitter.views.GlowableRelativeLayout
			android:id="@+id/glowstone" android:layout_height="match_parent"
			android:layout_width="match_parent" />
	</com.teamboid.twitter.views.SideNavigationLayout>
</RelativeLayout>